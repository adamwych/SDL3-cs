<Project Sdk="Microsoft.NET.Sdk">

  <!-- Native Library -->
  <PropertyGroup>
    <RuntimeIdentifier>osx-arm64</RuntimeIdentifier>
    <PlatformTarget>arm64</PlatformTarget>
    <NativeLibraryFileName>libSDL3.dylib</NativeLibraryFileName>
  </PropertyGroup>
  <Import Project="../NativeLibrary.props" />

  <!-- MSBuild settings -->
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <!-- NuGet -->
  <PropertyGroup>
    <PackageDescription>The native `SDL` library (SDL3) file (libSDL3.dylib) for the `osx-arm64` target framework moniker (TFM).</PackageDescription>
  </PropertyGroup>

</Project>
